<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.IndexController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allUsers</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.GetAllUsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allUsers</servlet-name>
        <url-pattern>/allUsers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.UserRegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteUser</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.UserDeleteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteUser</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>injectData</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.InjectDataController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>injectData</servlet-name>
        <url-pattern>/injectData</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>shoppingCartShow</servlet-name>
        <servlet-class>mate.academy.internetshop.controllers.GetUserCartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shoppingCartShow</servlet-name>
        <url-pattern>/shoppingCartShow</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteOrder</servlet-name>
        <servlet-class>
            mate.academy.internetshop.controllers.DeleteOrderController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteOrder</servlet-name>
        <url-pattern>/deleteOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getUserOrders</servlet-name>
        <servlet-class>
            mate.academy.internetshop.controllers.GetUserOrdersController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getUserOrders</servlet-name>
        <url-pattern>/getUserOrders</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>getUserOrder</servlet-name>
        <servlet-class>
            mate.academy.internetshop.controllers.GetUserOrderController
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getUserOrder</servlet-name>
        <url-pattern>/getUserOrder</url-pattern>
    </servlet-mapping>
</web-app>
